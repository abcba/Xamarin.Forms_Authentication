<?xml version="1.0" encoding="UTF-8"?>
<ContentPage BackgroundColor="#F5F5F5" xmlns="http://xamarin.com/schemas/2014/forms" Padding = "0,20,0,0" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Login.SignIn">
	<ContentPage.Content>
	<StackLayout Padding = "15,0,15,10" Spacing="8">
	<Label Text="LOGIN" FontAttributes="Bold" FontSize="52" HorizontalOptions="Center"/>
		<Label Text = "Sample OAuth Authentication App" FontSize="Small" HorizontalOptions="Center" />
		<StackLayout Spacing = "5">
			<Entry Placeholder="Username" HorizontalOptions="FillAndExpand"/>
			<Entry Placeholder="Password" IsPassword="true" HorizontalOptions="FillAndExpand"/>
			<Button x:Name="login" Text="Sign in" TextColor = "White" BackgroundColor="#B8ECD7" HorizontalOptions="FillAndExpand"/>
			<Button x:Name="fblogin" Clicked="fb_click" Text="Login With Facebook" TextColor = "White" BackgroundColor="#3b5998" HorizontalOptions="FillAndExpand"/>
		</StackLayout>
		<Label x:Name="key"/>
		<Button x:Name="create" Clicked="popup" Text="Make An Account" TextColor = "Black" FontAttributes="Italic" BackgroundColor="#F5F5F5" HorizontalOptions="FillAndExpand"/>

	</StackLayout>
	</ContentPage.Content>
</ContentPage>
